<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.google.android.diskusage"
    android:installLocation="auto" android:versionCode="2002" android:versionName="2.0.2">
    <application android:icon="@drawable/icon"
                 android:label="@string/app_name"
                 android:description="@string/app_description"
                 android:allowClearUserData="true"
                 android:allowTaskReparenting="true"
                 android:launchMode="singleTop">
        <activity android:name=".SelectActivity" android:label="@string/app_name"
            android:theme="@style/Theme.NoBackground">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    <activity android:name=".DiskUsage" android:label="@string/app_name"
              android:theme="@style/Theme.NoBackground"/>
    <activity android:name=".AppUsage" android:label="@string/app_name"
              android:theme="@style/Theme.NoBackground"/>
    <activity android:name=".FilterActivity"/>
    <activity android:name=".DeleteActivity"/>
</application>
<uses-sdk android:minSdkVersion="1" android:targetSdkVersion="8"/>
<supports-screens android:smallScreens="true"
                  android:anyDensity="true"
                  android:normalScreens="true"
                  android:resizeable="true"
                  android:largeScreens="true"
                  android:xlargeScreens="true"/>
<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
<uses-permission android:name="android.permission.GET_PACKAGE_SIZE"/>

</manifest> 
