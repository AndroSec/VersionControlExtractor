<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE manifest>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.sourceforge.andsys"
    android:versionCode="25"
    android:versionName="0.3.i.25">

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="17" />

    <!-- Work Around Features Not Supported on TV -->
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name">
        <activity
            android:name=".ActivityApps"
            android:label="@string/label__apps"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivityDevice"
            android:label="@string/label__device"
            android:launchMode="singleTask">
        </activity>
        <activity
            android:name=".ActivityHelpReadme"
            android:label="@string/label__help__readme"
            android:launchMode="singleTask">
        </activity>
        <activity
            android:name=".ActivityHelpFeatures"
            android:label="@string/label__help__features"
            android:launchMode="singleTask">
        </activity>
        </application>

</manifest>