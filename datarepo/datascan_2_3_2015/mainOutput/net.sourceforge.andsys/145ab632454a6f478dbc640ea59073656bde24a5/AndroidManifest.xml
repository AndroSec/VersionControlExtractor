<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE manifest>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.sourceforge.andsys"
    android:installLocation="auto"
    android:versionCode="32"
    android:versionName="0.4-rc2" >

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="18" />
    <!-- Work Around Features Not Supported on TV -->
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <application
        android:name=".State"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Shadow_At" >
        <activity
            android:name=".ActivityApps"
            android:label="@string/app_name"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivityDevice"
            android:label="@string/label__device"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name=".ActivityHelp"
            android:label="@string/label__help"
            android:launchMode="singleTask" >
        </activity>
    </application>

</manifest>