<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="aws.apps.usbDeviceEnumerator"
      android:versionCode="3"
      android:versionName="0.0.3">
   <uses-sdk android:minSdkVersion="12" android:targetSdkVersion="12"></uses-sdk>

    <application 
    	android:hardwareAccelerated="true"
    	android:icon="@drawable/icon" 
    	android:label="@string/app_name" android:theme="@android:style/Theme.Holo.Light">
        <activity android:name=".Act_UsbDeviceEnumerator"
        		  android:configChanges="orientation|keyboardHidden"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
    
    <uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
</manifest>