<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.sufficientlysecure.viewer.fontpack"
    android:versionCode="2100"
    android:versionName="2.1" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="org.sufficientlysecure.viewer.fontpack.FontpackApp"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.sufficientlysecure.viewer.fontpack.ui.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.sufficientlysecure.viewer.fontpack.ui.FontViewerActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>