<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="free.yhc.netmbuddy"
    android:versionCode="10"
    android:versionName="1.1.3" >
    <uses-sdk android:minSdkVersion="10" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.GET_TASKS"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_PROVIDER"/>

    <application
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:name=".YTMPApp"
        >
        <activity
            android:name=".YTMPActivity"
            android:configChanges="orientation|keyboardHidden"
            android:theme="@android:style/Theme.NoTitleBar"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PlaylistActivity"
                  android:configChanges="orientation|keyboardHidden"
                  android:theme="@android:style/Theme.NoTitleBar"
                  android:launchMode="singleTop"
                  >
            <meta-data android:name="android.app.default_searchable"
                       android:value=".PlaylistActivity" />
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data android:name="android.app.searchable"
                       android:resource="@xml/searchable_keyword"/>
            </activity>
        <activity android:name=".MusicsActivity"
                  android:configChanges="orientation|keyboardHidden"
                  android:theme="@android:style/Theme.NoTitleBar"
                  >
        </activity>
        <activity android:name=".YTVideoSearchKeywordActivity"
                  android:configChanges="orientation|keyboardHidden"
                  android:theme="@android:style/Theme.NoTitleBar"
                  android:launchMode="singleTop"
                  >
            <meta-data android:name="android.app.default_searchable"
                       android:value=".YTVideoSearchKeywordActivity" />
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data android:name="android.app.searchable"
                       android:resource="@xml/searchable_keyword"/>
        </activity>
        <activity android:name=".YTVideoSearchAuthorActivity"
                  android:configChanges="orientation|keyboardHidden"
                  android:theme="@android:style/Theme.NoTitleBar"
                  android:launchMode="singleTop"
                  >
            <meta-data android:name="android.app.default_searchable"
                       android:value=".YTVideoSearchAuthorActivity" />
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data android:name="android.app.searchable"
                       android:resource="@xml/searchable_user"/>
        </activity>
        <activity android:name=".YTVideoSearchPlaylistActivity"
                  android:configChanges="orientation|keyboardHidden"
                  android:theme="@android:style/Theme.NoTitleBar"
                  android:launchMode="singleTop"
                  >
            <meta-data android:name="android.app.default_searchable"
                       android:value=".YTVideoSearchPlaylistActivity" />
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data android:name="android.app.searchable"
                       android:resource="@xml/searchable_user"/>
        </activity>
        <activity android:name=".YTPlaylistSearchActivity"
                  android:configChanges="orientation|keyboardHidden"
                  android:theme="@android:style/Theme.NoTitleBar"
                  android:launchMode="singleTop"
                  >
            <meta-data android:name="android.app.default_searchable"
                       android:value=".YTPlaylistSearchActivity" />
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data android:name="android.app.searchable"
                       android:resource="@xml/searchable_user"/>
        </activity>
        <activity android:name=".YTMPPreferenceActivity"
                  android:configChanges="orientation|keyboardHidden"
                  android:theme="@android:style/Theme.NoTitleBar"
                  />
        <activity android:name=".VideoPlayerActivity"
                  android:screenOrientation="landscape"
                  android:configChanges="orientation|keyboardHidden"
                  android:theme="@android:style/Theme.NoTitleBar"
                  />
        <activity android:name=".LockScreenActivity"
                  android:configChanges="orientation|keyboardHidden"
                  android:theme="@android:style/Theme.NoTitleBar"
                  />
        <activity android:name=".ImportShareActivity"
                  android:configChanges="orientation|keyboardHidden"
                  android:theme="@android:style/Theme.Dialog"
                  android:launchMode="singleTop"
                  />
        <activity android:name=".ImportShareContentActivity"
                  android:configChanges="orientation|keyboardHidden"
                  android:theme="@android:style/Theme.Dialog"
                  >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="*/*" />
                <data android:host="*" />
                <data android:scheme="content" />
            </intent-filter>
        </activity>
        <activity android:name=".ImportShareFileActivity"
                  android:configChanges="orientation|keyboardHidden"
                  android:theme="@android:style/Theme.Dialog"
                  >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="*/*" />
                <data android:host="*" />
                <data android:scheme="file" />
                <data android:pathPattern=".*\\.netmbuddy" />
                <data android:pathPattern=".*\\..*\\.netmbuddy"/>
                <data android:pathPattern=".*\\..*\\..*\\.netmbuddy"/>
                <data android:pathPattern=".*\\..*\\..*\\..*\\.netmbuddy"/>
            </intent-filter>
        </activity>
        <receiver android:name=".model.YTPlayer$TelephonyMonitor">
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE" />
            </intent-filter>
        </receiver>
        <receiver android:name=".model.YTPlayer$NetworkMonitor">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
        <receiver android:name=".model.NotiManager$NotiIntentReceiver">
            <intent-filter>
                <action android:name="ytmplayer.intent.action.NOTIFICATION_DELETE" />
                <action android:name="ytmplayer.intent.action.NOTIFICATION_ACTION" />
            </intent-filter>
        </receiver>
        <provider android:name=".model.SearchSuggestionProvider"
                  android:authorities="free.yhc.netmbuddy" />
    </application>
</manifest>