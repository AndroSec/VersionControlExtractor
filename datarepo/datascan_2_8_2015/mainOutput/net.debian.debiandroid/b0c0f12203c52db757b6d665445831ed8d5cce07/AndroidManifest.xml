<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.debian.debiandroid"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.debian.debiandroid.ItemListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
			    <action android:name="android.intent.action.VIEW" />
			    <category android:name="android.intent.category.DEFAULT"/> 
  				<category android:name="android.intent.category.BROWSABLE"/>
  				<data android:scheme="http" android:host="bugs.debian.org"/>
			    <data android:scheme="http" android:host="packages.qa.debian.org"/>
			    <data android:scheme="http" android:host="www.bugs.debian.org"/>
			    <data android:scheme="http" android:host="www.packages.qa.debian.org"/>
			</intent-filter>
        </activity>
        <activity
            android:name="com.debian.debiandroid.ItemDetailActivity"
            android:label="@string/title_item_detail"
            android:parentActivityName=".ItemListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ItemListActivity" />
        </activity>
        <activity
            android:name="com.debian.debiandroid.SettingsActivity"
            android:label="@string/settings"
            android:parentActivityName=".SettingsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ItemListActivity" />
        </activity>
         <service android:name=".DDNotifyService" android:exported="false" />
    </application>

</manifest>